---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Newspaper } from 'lucide-react';
---

<BaseLayout title="Blog - Ignacio Machado">
  <section class="py-12">
    <h1 class="font-mono text-3xl sm:text-4xl font-bold tracking-tight">
      Blog
    </h1>
    
    <div class="mt-12 flex flex-col items-center justify-center py-16 text-center">
      <div class="p-4 rounded-full bg-slate-100 dark:bg-slate-800 mb-6">
        <Newspaper className="w-12 h-12 text-slate-400" />
      </div>
      
      <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-100">
        Coming Soon
      </h2>
      
      <p class="mt-2 text-slate-600 dark:text-slate-400 max-w-md">
        I'm working on some articles about software development, AI, and my experiences in tech. 
        Stay tuned!
      </p>
    </div>
  </section>
</BaseLayout>
