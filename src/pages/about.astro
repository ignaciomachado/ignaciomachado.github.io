---
import BaseLayout from '../layouts/BaseLayout.astro';
import ExperienceCard from '../components/ExperienceCard';
import PublicationCard from '../components/PublicationCard';
import { experiences } from '../data/experience';
import { publications } from '../data/publications';
import { Code2, Languages, BookOpen } from 'lucide-react';
---

<BaseLayout title="About - Ignacio Machado">
  <section class="py-8">
    <h1 class="font-mono text-3xl sm:text-4xl font-bold tracking-tight">
      About Me
    </h1>
    
    <p class="mt-6 text-lg text-slate-600 dark:text-slate-400 leading-relaxed">
      I'm a Software Engineer with a passion for building products that make a difference. 
      Currently working at Tiendanube, where I focus on conversational commerce and AI integration 
      to enhance the e-commerce experience.
    </p>
    
    <p class="mt-4 text-slate-600 dark:text-slate-400 leading-relaxed">
      With experience spanning from government institutions to startups, I've developed expertise 
      in full-stack development using React, Node.js, PHP/Symfony, and various AI technologies.
    </p>
  </section>
  
  <section class="py-8 border-t border-slate-200 dark:border-slate-800">
    <h2 class="font-mono text-2xl font-semibold mb-2 flex items-center gap-2">
      <Code2 className="w-6 h-6 text-primary-600 dark:text-primary-400" />
      Skills
    </h2>
    
    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="p-4 rounded-lg bg-slate-100 dark:bg-slate-800/50">
        <h3 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Frontend</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          React, TypeScript, Next.js, Tailwind CSS
        </p>
      </div>
      
      <div class="p-4 rounded-lg bg-slate-100 dark:bg-slate-800/50">
        <h3 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Backend</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Node.js, PHP, Symfony, Python
        </p>
      </div>
      
      <div class="p-4 rounded-lg bg-slate-100 dark:bg-slate-800/50">
        <h3 class="font-medium text-slate-900 dark:text-slate-100 mb-2">AI & Integrations</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          LLMs, WhatsApp Business API, REST APIs
        </p>
      </div>
      
      <div class="p-4 rounded-lg bg-slate-100 dark:bg-slate-800/50">
        <h3 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Tools</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Git, Docker, CI/CD, AWS
        </p>
      </div>
    </div>
  </section>
  
  <section class="py-8 border-t border-slate-200 dark:border-slate-800">
    <h2 class="font-mono text-2xl font-semibold mb-2 flex items-center gap-2">
      <Languages className="w-6 h-6 text-primary-600 dark:text-primary-400" />
      Languages
    </h2>
    
    <div class="mt-4 flex flex-wrap gap-3">
      <span class="px-4 py-2 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-sm font-medium">
        Spanish (Native)
      </span>
      <span class="px-4 py-2 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-sm font-medium">
        English
      </span>
      <span class="px-4 py-2 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-sm font-medium">
        Portuguese
      </span>
    </div>
  </section>
  
  <section class="py-8 border-t border-slate-200 dark:border-slate-800">
    <h2 class="font-mono text-2xl font-semibold mb-6">Experience</h2>
    
    <div>
      {experiences.map((exp) => (
        <ExperienceCard experience={exp} client:load />
      ))}
    </div>
  </section>
  
  <section class="py-8 border-t border-slate-200 dark:border-slate-800">
    <h2 class="font-mono text-2xl font-semibold mb-2 flex items-center gap-2">
      <BookOpen className="w-6 h-6 text-primary-600 dark:text-primary-400" />
      Publications
    </h2>
    
    <div class="mt-6">
      {publications.map((pub) => (
        <PublicationCard publication={pub} client:load />
      ))}
    </div>
  </section>
</BaseLayout>
